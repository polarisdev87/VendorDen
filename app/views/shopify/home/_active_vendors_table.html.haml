- unless @active_vendors.present?
  %p
    You have no active vendors
- else  
  %table.table.table-hover.table-striped
    %thead
      %th ID
      %th Name
      %th Created At
      %th Status
    %tbody
      - @active_vendors.each do |vendor|
        %tr
          %td= vendor.id
          %td= vendor.name
          %td= vendor.created_at.strftime('%b %-d, %Y')
          %td= vendor.status