%h2.page-title
  Vendor Invite Registration Wizard

.row.mt-4
  .col-md-12
    .card
      .card-body
        %ul.stepper.stepper-horizontal
          %li.active
            %a
              %span.circle
                %i.fa.fas.fa-lock
              %span.label
                Set Password
          %li
            %a
              %span.circle
                %i.fa.fas.fa-info
              %span.label
                Complete Info
          %li
            %a
              %span.circle
                %i.fa.fas.fa-credit-card
              %span.label
                Payment Info
          %li
            %a
              %span.circle
                %i.fa.fas.fa-check
              %span.label
                Complete


        = form_for (current_user), url: set_password_vendor_invite_wizard_path do |f|
          .form-row
            .col-md-6.mb-3
              = f.label :password
              = f.password_field :password, 'class' => "form-control #{f.object.errors[:password].present? ? 'is-invalid' : ''}", 'autofocus' => true
              - if f.object.errors[:password].present?
                .invalid-feedback{'style' => 'display: block;'}
                  = f.object.errors[:password].join(', ')
        
            .col-md-6.mb-3
              = f.label :password_confirmation
              = f.password_field :password_confirmation, 'class' => "form-control #{f.object.errors[:password_confirmation].present? ? 'is-invalid' : ''}"
              - if f.object.errors[:password_confirmation].present?
                .invalid-feedback{'style' => 'display: block;'}
                  = f.object.errors[:password_confirmation].join(', ')
            
          .text-right
            = f.submit 'Next', class: 'btn btn-primary waves-effect waves-light', 'data-disable-with' => 'Saving...'
